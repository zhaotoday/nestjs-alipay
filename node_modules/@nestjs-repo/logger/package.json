{
  "name": "@nestjs-repo/logger",
  "version": "0.0.1",
  "description": "NestJS 日志模块",
  "keywords": [
    "nestjs",
    "typescript"
  ],
  "author": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "private": false,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build --watch",
    "build": "tsc -b -v",
    "clean": "rimraf dist",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@nestjs-repo/eslint-config": "workspace:*",
    "@nestjs-repo/typescript-config": "workspace:*",
    "@types/express": "^5.0.5",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.10.7",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "@nestjs/swagger": "^11.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "sequelize": "^6.0.0"
  },
  "dependencies": {
    "nestjs-pino": "^4.5.0",
    "pino": "^9.5.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "pino-roll": "^1.0.1",
    "pino-std-serializers": "^7.0.0",
    "rotating-file-stream": "^3.2.7"
  }
}
